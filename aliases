alias git=hub
alias d=docker
alias dc='docker compose'

###python
alias pup='pip install -r requirements.txt'
alias venv='APP_NAME=`basename "$PWD"`&& source ~/.virtualenv/$APP_NAME/bin/activate'
alias cvenv='APP_NAME=`basename "$PWD"`&& rm -rf ~/.virtualenv/$APP_NAME && virtualenv -p `which python3` ~/.virtualenv/$APP_NAME  && ln -sf /System/Library/Frameworks/Python.framework/Versions/3.6/Extras/lib/python/OpenSSL ~/.virtualenv/$APP_NAME/lib/python3.6/ && source ~/.virtualenv/$APP_NAME/bin/activate'
alias cvvenv='APP_NAME=`basename $(dirname "$PWD")`&& rm -rf ~/.virtualenv/$APP_NAME && virtualenv -p `which python3` ~/.virtualenv/$APP_NAME && source ~/.virtualenv/$APP_NAME/bin/activate'
alias ocvenv='APP_NAME=`basename "$PWD"`&& rm -rf ~/.virtualenv/$APP_NAME && virtualenv -p `which python2.7` ~/.virtualenv/$APP_NAME  && ln -sf /System/Library/Frameworks/Python.framework/Versions/2.7/Extras/lib/python/OpenSSL ~/.virtualenv/$APP_NAME/lib/python2.7/ && source ~/.virtualenv/$APP_NAME/bin/activate'
alias jvenv=jump_and_venv

#ssl
alias sslenc='openssl aes-256-cbc -salt -a'
alias ssldec='openssl aes-256-cbc -d -a'

#clojure
alias clt='lein test'
alias clr='lein repl'
alias clat='lein auto test'
alias cld='lein deps'

#go notifier
alias gonotifier='./gonotifier && fswatch . ./gonotifier'

vi=nvim
vim=nvim

